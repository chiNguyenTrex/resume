<h1>New portfolio</h1>
<div>
  <%= form_for @portfolio do |form| %>
    <% if @portfolio.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@portfolio.errors.count, "error") %> prohibited this blog from being saved:</h2>

        <ul>
        <% @portfolio.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="field">
      <%= form.label :subtitle %>
      <%= form.text_field :subtitle %>
    </div>

    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body %>
    </div>

    <div class="field">
      <ul>
        <%= form.fields_for :technologies do |technology_form| %>
          <li>
            <%= technology_form.label :name %>
            <%= technology_form.text_field :name %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
