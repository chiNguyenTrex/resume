<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <%= image_tag portfolio_item.thumb_image %>
    <div class="card-body">
      <h5 class="text-primary"><%= portfolio_item.title %></h5>
      <p class="card-text"><%= portfolio_item.subtitle.capitalize %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to "View", show_portfolio_path(portfolio_item), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to "Edit", edit_portfolio_path(portfolio_item), class: "btn btn-sm btn-outline-secondary" %>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>
