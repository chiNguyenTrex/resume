<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Portfolio", sticky: false, time: 1000) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Portfolio", sticky: false, time: 1000) %>
<% elsif flash[:success] %>
  <%= js add_gritter(flash[:success], title: "Portfolio", sticky: false, time: 1000) %>
<% elsif flash[:notice] %>
  <%= js add_gritter(flash[:notice], title: "Portfolio", sticky: false, time: 1000) %>
<% end %>
