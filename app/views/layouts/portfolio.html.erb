<!DOCTYPE html>
<html>
  <head>
    <title><%= generate_title(yield :title) %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'portfolio', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render "layouts/nav" %>
    <div class="clearfix">
      <div>
        <%= render "shared/flash" %>
      </div>
    </div>
    <%= yield %>
    <div>
      <% if session[:source] %>
        Thank for visiting <%= session[:source] %>
      <% end %>
    </div>
  </body>
</html>
